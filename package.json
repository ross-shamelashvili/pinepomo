{
  "name": "pinepomo",
  "version": "0.0.1",
  "private": true,
  "description": "Cross-platform Pomodoro timer with Obsidian plugin and Todoist browser extension",
  "author": "Ross Shamelashvili",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ross-shamelashvili/pinepomo.git"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
